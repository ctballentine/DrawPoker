function faceCardNumber(cardString) {
 if (cardString=="ACE"){
   var returnValue="1";
} else if (cardString=="JACK"){
   var returnValue="11";
} else if (cardString=="QUEEN"){
   var returnValue="12";
} else if (cardString=="KING"){
   var returnValue="13";
}
 return returnValue;
}

function findCard(cardString) {
 if(Number(cardString.split(" ")[0])){
   var cardNumber = cardString.split(" ")[0];
} else {
   var cardNumber = faceCardNumber(cardString.split(" ")[0]);
}
 var suitLetter = cardString.split(" ")[2][0];
 var returnValue = "/" + cardNumber + suitLetter + ".svg";
 return returnValue;
}



